{
  "name": "discrete-sim",
  "version": "0.1.3",
  "description": "Discrete-event simulation library for JavaScript/TypeScript",
  "keywords": [
    "simulation",
    "discrete-event",
    "modeling",
    "operations-research",
    "queuing-theory",
    "simpy",
    "warehouse",
    "optimization"
  ],
  "author": "Anes Mulalic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anesask/discrete-sim.git"
  },
  "bugs": {
    "url": "https://github.com/anesask/discrete-sim/issues"
  },
  "homepage": "https://github.com/anesask/discrete-sim#readme",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "GUIDE.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "tsx": "^4.21.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=16"
  }
}
